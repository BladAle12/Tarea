<p id="notice"><%= notice %></p>

<h1>Listing Materia</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigomat</th>
      <th>Dias</th>
      <th>Fechainicio</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materia.each do |materium| %>
      <tr>
        <td><%= materium.nombre %></td>
        <td><%= materium.codigomat %></td>
        <td><%= materium.dias %></td>
        <td><%= materium.fechainicio %></td>
        <td><%= materium.estatus %></td>
        <td><%= link_to 'Show', materium %></td>
        <td><%= link_to 'Edit', edit_materium_path(materium) %></td>
        <td><%= link_to 'Destroy', materium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

